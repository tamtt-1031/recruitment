<%= render partial: "shared/page_header", locals: { title: "お問い合わせ" } %>

<div class="container mt50">
    <div class="contact-info" data-aos="fade-up">
        <div class="row">
            <div class="col-lg-4 col-md-12 content-wrapper">
                <div class="info-content">
                    <div class="left">
                        <i class="fa fa-phone"></i>
                    </div>
                    <div class="right">
                        <h6 class="mb10">電話番号</h6>
                        <p class="mb0">
                            <%= Settings.company_info.mobile_phone %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 content-wrapper">
                <div class="info-content">
                    <div class="left">
                        <i class="fa fa-home"></i>
                    </div>
                    <div class="right">
                        <h6 class="mb10">住所</h6>
                        <p class="mb0">
                            兵庫県神戸市兵庫区大開通１０丁目２－１６　初阪第一ビル3階
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 content-wrapper">
                <div class="info-content">
                    <div class="left">
                        <i class="fa fa-envelope"></i>
                    </div>
                    <div class="right">
                        <h6 class="mb10">メール</h6>
                        <p class="mb0">
                            <%= Settings.company_info.email %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%= render "shared/contact_form" %>

    <div id="map" class="mb30">
      <iframe
        src="https://maps.google.com/maps?q=%E5%85%B5%E5%BA%AB%E7%9C%8C%E7%A5%9E%E6%88%B8%E5%B8%82%E5%85%B5%E5%BA%AB%E5%8C%BA%E5%A4%A7%E9%96%8B%E9%80%9A%EF%BC%91%EF%BC%90%E4%B8%81%E7%9B%AE%EF%BC%92%EF%BC%8D%EF%BC%91%EF%BC%96%E3%80%80%E5%88%9D%E9%98%AA%E7%AC%AC%E4%B8%80%E3%83%93%E3%83%AB3%E9%9A%8E&t=&z=15&ie=UTF8&iwloc=&output=embed"
        width="100%" height="450" frameborder="0" style="border:0" allowfullscreen>
      </iframe>
    </div>

</div>
