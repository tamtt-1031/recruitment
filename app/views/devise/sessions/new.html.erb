<div class="login-area">
  <div class="container">
    <div class="login-box ptb--100">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login-form-head">
          <h4>Sign In</h4>
          <p>Sign in and start managing your Website!</p>
        </div>
        <div class="login-form-body">
          <div class="form-gp">
            <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", autocomplete: "email" %>
            <i class="fa fa-envelope-o"></i>
          </div>
          <div class="form-gp">
            <%= f.password_field :password, placeholder: "Enter your password", autocomplete: "current-password" %>
            <i class="fa fa-lock"></i>
          </div>
          <div class="row mb-4 rmber-area">
            <% if devise_mapping.rememberable? %>
              <div class="col-6">
                <div class="custom-control custom-checkbox mr-sm-2">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              </div>
            <% end %>
            <div class="col-6 text-right">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            </div>
          </div>
          <div class="submit-btn-area">
            <%= f.button "Log in" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
