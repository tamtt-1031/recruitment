<div class="login-area">
    <div class="container">
        <div class="login-box ptb--100">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.hidden_field :reset_password_token %>
                <div class="login-form-head">
                    <h4>Reset Password</h4>
                    <p>Hey! Reset Your Password and comeback again</p>
                </div>
                <div class="login-form-body">
                  <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="form-gp">
                      <%= f.password_field :password, autofocus: true, placeholder: "New password", autocomplete: "new-password" %>
                        <i class="ti-lock"></i>
                    </div>
                    <div class="form-gp">
                      <%= f.password_field :password_confirmation, placeholder: "Confirmation new password", autocomplete: "off" %>
                        <i class="ti-lock"></i>
                    </div>
                    <div class="submit-btn-area mt-5">
                      <%= f.button "Reset password" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
