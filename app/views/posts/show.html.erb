<div class="container gf-post-detail">
   <%= render partial: "shared/page_header", locals: { title: @post.title } %>
   <div class="row">
       <div class="col-md-9 gf-post-detail">
           <ul class="gf-post-meta list-inline">
               <li class="meta-date">
                <%= @post.created_at.strftime("%Y-%m-%d") %>
            </li>
            <li>999 comments</li>
        </ul>

        <div class="clearfix gf-entry-content">
           <%= raw @post.content %>
       </div>

      <div class="social-share-wrapper d-flex">
        <p>Share this: </p>
        <%= social_share_button_tag(@post.title) %>
      </div>
       <div class="gf-post-comments">
           <%= render partial: "comment" %>
       </div>
   </div>
   <div class="gf-righ-sidebar col-md-3">
       <aside class="widget-search">
           <form role="search" method="get" class="search-form">
               <input type="search" class="form-control" placeholder="Search …" value="" name="s">
               <button type="submit" class="search-submit">
                   <i class="fa fa-search"></i>
               </button>
           </form>
       </aside>

       <aside class="recent-posts-widget">
           <h4 class="widget-title">Recent Posts</h4>
           <%= render partial: "recent_posts", locals: { title: 'お問い合わせ', date: "2019/01/01" } %>
