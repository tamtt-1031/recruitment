<% posts.each do |post| %>
  <li class="col-lg-12 media mb-4">
    <% if post.image %>
      <%= image_tag post.image.url, class: "post-image mr-4" %>
    <% end %>
    <div class="media-body justify-content">
      <h5 class="mb-3"><%= post.title %></h5>
      <%= raw(post.content) %>
    </div>

    <div class="col-lg-1 col-md-2 mr-2">
      <div class="btn-align-center row">
        <%= link_to post_path(post), class: "btn btn-outline-info btn-xs mb-3 mr-1" do %>
          <span class="fa fa-eye"></span>
        <% end %>
        <%= link_to edit_admins_post_path(post), class: "btn btn-outline-primary btn-xs mb-3 mr-1" do %>
          <span class="fa fa-edit"></span>
        <% end %>
        <%= link_to admins_post_path(post), method: :delete, class: "btn btn-outline-danger btn-xs mb-3 mr-1" do %>
          <span class="fa fa-trash-o"></span>
        <% end %>
      </div>

      <div class="row btn-align-center">
        <% if post.publish? %>
          <%= link_to publish_admins_post_path(id: post.id, publish_status: :unpublish), class: "btn btn-outline-warning btn-xs mb-3 btn-unpublish" do %>
            <span class="fa fa-tv"></span>
            <b><%= t(".unpublish") %></b>
          <% end %>
        <% else %>
          <%= link_to publish_admins_post_path(id: post.id, publish_status: :publish), class: "btn btn-outline-success btn-xs mb-3 btn-publish" do %>
            <span class="fa fa-tv"></span>
            <b><%= t(".publish") %></b>
          <% end %>
        <% end %>
      </div>
    </div>
  </li>
<% end %>
