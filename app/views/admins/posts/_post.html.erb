<% posts.each do |post| %>
  <li class="col-lg-12 media mb-4">
    <%= image_tag "admin/media/media1.jpg", class: "img-fluid mr-4" %>
    <div class="media-body justify-content">
      <h5 class="mb-3"><%= post.title %></h5>
      <%= post.content %>
    </div>

    <div class="col-lg-1 col-md-2 mr-2">
      <div class="btn-align-center row">
        <%= button_tag "", class: "btn btn-outline-info btn-xs mb-3 mr-1" do %>
          <span class="fa fa-eye"></span>
        <% end %>
        <%= button_tag "", class: "btn btn-outline-primary btn-xs mb-3 mr-1" do %>
          <span class="fa fa-edit"></span>
        <% end %>
        <%= button_tag "", class: "btn btn-outline-danger btn-xs mb-3 mr-1" do %>
          <span class="fa fa-trash-o"></span>
        <% end %>
      </div>

      <div class="row btn-align-center">
        <% if post.publish? %>
          <%= button_tag "", class: "btn btn-outline-warning btn-xs mb-3 btn-unpublish" do %>
            <span class="fa fa-tv"></span>
            <b>Unpublish</b>
          <% end %>
        <% else %>
          <%= button_tag "", class: "btn btn-outline-success btn-xs mb-3 btn-publish" do %>
            <span class="fa fa-tv"></span>
            <b>Publish</b>
          <% end %>
        <% end %>
      </div>
    </div>
  </li>
<% end %>
