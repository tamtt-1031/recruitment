<div class="row">
  <div class="col-12 mt-5">
    <div class="card">
      <div class="card-body">
        <h4 class="header-title"><%= t ".title" %></h4>
        <div class="single-table">
          <div class="table-responsive">
            <table class="table table-hover progress-table text-center">
              <thead class="text-uppercase">
                <tr>
                  <th scope="col"><%= t ".id" %></th>
                  <th scope="col"><%= t ".company_name" %></th>
                  <th scope="col"><%= t ".department" %></th>
                  <th scope="col"><%= t ".person_in_charge" %></th>
                  <th scope="col"><%= t ".phone_number" %></th>
                  <th scope="col"><%= t ".email" %></th>
                  <th scope="col"><%= t ".prefecture" %></th>
                  <th scope="col"><%= t ".address" %></th>
                  <th scope="col"><%= t ".content" %></th>
                  <th scope="col"><%= t ".status" %></th>
                  <th scope="col"><%= t ".action" %></th>
                </tr>
              </thead>
              <tbody>
                <% @clients.each do |client| %>
                  <tr>
                    <th scope="row"><%= client.id %></th>
                    <td><%= client.company_name %></td>
                    <td><%= client.department %></td>
                    <td><%= client.person_in_charge %></td>
                    <td><%= client.phone_number %></td>
                    <td><%= client.email %></td>
                    <td><%= client.prefecture %></td>
                    <td><%= client.address %></td>
                    <td><%= client.content %></td>
                    <td><%= client.contact_status.camelcase %></td>
                    <td>
                      <% if client.contacted? %>
                        <%= link_to contact_admins_client_path(id: client.id,
                          contact_status: :not_contact), class: "btn btn-outline-warning btn-xs mb-3" do %>
                          <span class="fa fa-phone"></span>
                          <b><%= t(".not_contact") %></b>
                        <% end %>
                      <% else %>
                        <%= link_to contact_admins_client_path(id: client.id, contact_status: :contacted),
                          class: "btn btn-outline-success btn-xs mb-3" do %>
                          <span class="fa fa-phone"></span>
                          <b><%= t(".contacted") %></b>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
