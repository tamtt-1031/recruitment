<div class="row">
  <div class="col-12 mt-5">
    <div class="card">
      <div class="card-body">
        <h4 class="header-title"><%= t ".title" %></h4>
        <div class="single-table">
          <div class="table-responsive">
            <table class="table table-hover progress-table text-center">
              <thead class="text-uppercase">
                <tr>
                  <th scope="col"><%= t ".id" %></th>
                  <th scope="col"><%= t ".name" %></th>
                  <th scope="col"><%= t ".email" %></th>
                  <th scope="col"><%= t ".phone_number" %></th>
                  <th scope="col"><%= t ".website" %></th>
                  <th scope="col"><%= t ".content" %></th>
                  <th scope="col"><%= t ".status" %></th>
                  <th scope="col"><%= t ".action" %></th>
                </tr>
              </thead>
              <tbody>
                <% @candidates.each do |candidate| %>
                  <tr>
                    <th scope="row"><%= candidate.id %></th>
                    <td><%= candidate.name %></td>
                    <td><%= candidate.email %></td>
                    <td><%= candidate.phone_number %></td>
                    <td><%= candidate.website %></td>
                    <td><%= candidate.content %></td>
                    <td><%= candidate.contact_status.camelcase %></td>
                    <td>
                      <% if candidate.contacted? %>
                        <%= link_to contact_admins_candidate_path(id: candidate.id,
                          contact_status: :not_contact), class: "btn btn-outline-warning btn-xs mb-3" do %>
                          <span class="fa fa-phone"></span>
                          <b><%= t(".not_contact") %></b>
                        <% end %>
                      <% else %>
                        <%= link_to contact_admins_candidate_path(id: candidate.id, contact_status: :contacted),
                          class: "btn btn-outline-success btn-xs mb-3" do %>
                          <span class="fa fa-phone"></span>
                          <b><%= t(".contacted") %></b>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
