<div class="job-lists">
    <% jobs.each do |job| %>
        <div class="job-item row">
            <div class="job-detail col-md-5">
                <h4>
                <%= link_to job do %>
                    <%= job.title %>
                <% end %>
                </h4>
                <p class="mb0">
                    <span class="mr10">
                        <i class="fa fa-map-marker mr5"></i>
                        <%= job.place %>
                    </span>
                    <span>
                        <i class="fa fa-group mr5"></i>
                        <%= job.quantity %>
                    </span>
                </p>
            </div>
            <div class="job-feature col-md-5">
                <p class="mb0">
                    <strong class="mr5">給料:</strong>
                     <%= job.salary %>
                </p>

                <p class="mb0">
                    <strong class="mr5">募集期間:</strong>
                    <%= job.start_date.strftime("%Y/%m/%d") %>
                    -
                    <%= job.end_date.strftime("%Y/%m/%d") %>
                </p>

            </div>

            <div class="actions col-md-2">
                <%= link_to '続きを読む', job, class: 'button button-small button-primary button-border' %>
            </div>
        </div>
    <% end %>
</div>
